generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id
  name        String
  description String?
  createdAt   DateTime @default(now())

  calendarStats CalendarStat[]
}

/// Tracks per-platform calendar add clicks for an event
model CalendarStat {
  id        Int      @id @default(autoincrement())
  eventId   String
  platform  String // "google" | "apple"
  count     Int      @default(0)
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id])

  @@unique([eventId, platform])
}

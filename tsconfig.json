{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
   

    // Module Settings
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "types": ["node"],
    // "typeRoots": ["./node_modules/@types", "./src/types"],

    // Output Settings
    "sourceMap": true,
    "declaration": true,
    // "declarationMap": true,
    "removeComments": false,

    // Type Checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/lib/**/*", "prisma/**/*", "api/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/serverNone.ts"]
  // "include": ["api/**/*", "src/lib/**/*", "prisma/**/*", "prisma.config.ts"],
  // "exclude": ["node_modules", "dist", "**/*.test.ts", "src/server.ts"]
}
